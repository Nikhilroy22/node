<%- include('header') %>
<style>
  /* উপরের CSS কোড এখানে পেস্ট করো */
  /* Reset some default */
* {
  box-sizing: border-box;
}

body {
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  background: #f5f7fa;
  margin: 0;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

main {
  background: #fff;
  padding: 30px 25px;
  border-radius: 10px;
  box-shadow: 0 10px 25px rgba(0,0,0,0.1);
  width: 90%;
  max-width: 400px;
}

h2 {
  text-align: center;
  color: #333;
  margin-bottom: 25px;
}

form div {
  margin-bottom: 20px;
  position: relative;
}

input[type="text"],
input[type="password"] {
  width: 100%;
  padding: 12px 15px;
  font-size: 16px;
  border: 1.8px solid #ccc;
  border-radius: 6px;
  transition: border-color 0.3s ease;
}

input[type="text"]:focus,
input[type="password"]:focus {
  border-color: #4A90E2;
  outline: none;
}

ul {
  margin: 8px 0 0 0;
  padding-left: 20px;
}

ul li {
  color: #e74c3c; /* red */
  font-size: 14px;
}

button {
  width: 100%;
  background-color: #4A90E2;
  color: white;
  padding: 14px;
  border: none;
  border-radius: 6px;
  font-size: 18px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

button:hover {
  background-color: #357ABD;
}

/* Responsive typography for small screens */
@media (max-width: 400px) {
  h2 {
    font-size: 20px;
  }

  input[type="text"],
  input[type="password"] {
    font-size: 14px;
  }

  button {
    font-size: 16px;
  }
}
</style>

<main>
  
  <h2>লগইন ফর্ম</h2>

<form action="/login" method="POST">
  <div>
    <input type="text" name="user" placeholder="নাম লিখুন" value="<%= oldInput.user || '' %>">
    <% if (errors.user) { %>
      <ul style="color:red;">
        <li><%= errors.user %></li>
      </ul>
    <% } %>
  </div>

  <div>
    <input type="password" name="pass" placeholder="পাসওয়ার্ড লিখুন" value="<%= oldInput.pass || '' %>">
    <% if (errors.pass) { %>
      <ul style="color:red;">
        <li><%= errors.pass %></li>
      </ul>
    <% } %>
  </div>

  <button type="submit">লগইন</button>
</form>
<%- include('footer') %>